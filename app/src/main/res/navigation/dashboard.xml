<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    app:startDestination="@id/dashBoardFragment">

    <fragment
        android:id="@+id/dashBoardFragment"
        tools:layout="@layout/fragment_dash_board"
        android:name="com.justnik.mirea_navigation_lesson.ui.dashboard.DashBoardFragment"
        android:label="fragment_dash_board">
        <action
            android:id="@+id/action_dashBoardFragment_to_cityFragment"
            app:destination="@id/cityFragment" />
    </fragment>
    <fragment
        android:id="@+id/cityFragment"
        tools:layout="@layout/fragment_city"
        android:name="com.justnik.mirea_navigation_lesson.ui.dashboard.CityFragment"
        android:label="fragment_city">
        <argument
            android:name="city"
            app:argType="com.justnik.mirea_navigation_lesson.enteties.City" />
    </fragment>
</navigation>